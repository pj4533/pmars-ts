{
  "name": "pmars-ts",
  "version": "0.1.0",
  "description": "TypeScript port of pmars (portable Memory Array Redcode Simulator) for Corewar",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "tsc -p tsconfig.build.json && cp -r dist/esm dist/cjs && node -e \"require('fs').writeFileSync('dist/cjs/package.json','{\\\"type\\\":\\\"commonjs\\\"}')\" && node -e \"require('fs').writeFileSync('dist/esm/package.json','{\\\"type\\\":\\\"module\\\"}')\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "corewar",
    "mars",
    "redcode",
    "pmars",
    "simulator",
    "assembler"
  ],
  "author": "pj4533",
  "repository": {
    "type": "git",
    "url": "https://github.com/pj4533/pmars-ts.git"
  },
  "homepage": "https://github.com/pj4533/pmars-ts",
  "bugs": {
    "url": "https://github.com/pj4533/pmars-ts/issues"
  },
  "license": "GPL-2.0",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
